<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- App bar style -->
    <style name="TourGuideAppBarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:endColor">@color/opaque_white</item>
    </style>

    <!-- Tab layout style -->
    <style name="CategoryTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimaryDark</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="tabTextAppearance">@style/CategoryTabTextAppearance</item>
    </style>

    <!-- Text appearance category tab style -->
    <style name="CategoryTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:color">#9e9e9e</item>
    </style>

    <!-- Text view style -->
    <style name="text_list_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">@dimen/margin_8</item>
        <item name="android:layout_marginLeft">@dimen/margin_8</item>
        <item name="android:textSize">@dimen/text_view_size_24</item>
        <item name="android:fontFamily">@font/disti_inking_regular</item>
    </style>

    <!-- Text view style -->
    <style name="text_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_margin">@dimen/margin_8</item>
        <item name="android:textSize">@dimen/text_view_size_36</item>
        <item name="android:fontFamily">@font/disti_inking_regular</item>
    </style>

</resources>
