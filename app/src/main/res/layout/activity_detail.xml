<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.android.tourguideapp.DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/detail_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/hotel_9"
                android:contentDescription="@string/app_name"/>

        <RelativeLayout
            android:id="@+id/detail_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detail_title_name"
                style="@style/text_view_detail"
                android:textSize="20sp"
                tools:text="Hotel de la Bonne Esperance" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/background_list">

            <TextView
                android:id="@+id/detail_address"
                style="@style/text_view_detail"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_action_home"
                android:textSize="14sp"
                android:text="@string/get_location"
                android:fontFamily="@font/marker"/>

            <TextView
                android:id="@+id/detail_tel"
                style="@style/text_view_detail"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_action_phone_start"
                android:textSize="14sp"
                android:text="@string/call_them"
                android:fontFamily="@font/marker"/>

        </LinearLayout>

        <TextView
            android:id="@+id/detail_desc"
            style="@style/text_view_detail"
            android:layout_gravity="center_horizontal"
            tools:text="@tools:sample/lorem/random"/>

        <TextView
            android:id="@+id/detail_item_name"
            style="@style/text_view_detail"
            android:layout_marginTop="@dimen/margin_4"
            android:textSize="14sp"
            tools:text="@tools:sample/cities" />

        <Button
            android:id="@+id/detail_web"
            style="@style/text_view_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_list"
            android:text="@string/button_web"
            android:fontFamily="@font/marker"/>

    </LinearLayout>

</ScrollView>